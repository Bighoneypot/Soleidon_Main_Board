(version 1)

# Applica 0 mm di clearance ai fori NPTH o meccanici
(rule "Hole-to-hole mechanical clearance"
  (constraint physical_hole_clearance (min 0mm))
  (condition "A.Pad_Type == 'NPTH' || A.IsMechanical"))

# Applica 0.15 mm di clearance solo ai fori conduttivi
(rule "Hole-to-copper clearance"
  (constraint physical_hole_clearance (min 0.15mm))
  (condition "A.Pad_Type == 'ThruHole' && A.NetClass != 'Default'"))
